  <script>
    // --- Audio system ---
    const audio = document.getElementById('spiceRebellion');
    const playBtn = document.getElementById('playBtn');
    let isPlaying = false;

    function toggleAudio(){
      if(!audio) return;
      if(isPlaying){
        audio.pause();
        playBtn.textContent = "‚ñ∂ PLAY";
      }else{
        audio.play().catch(()=>{ /* autoplay restrictions */ });
        playBtn.textContent = "‚è∏ PAUSE";
      }
      isPlaying = !isPlaying;
    }

    // --- Video fallback (if file missing) ---
    const vid = document.getElementById('bgVideo');
    const fb = document.getElementById('videoFallback');
    if(vid){
      vid.addEventListener('error', ()=>{ if(fb) fb.hidden = false; });
    }

    // --- Tiny easter egg: press F to jump to Shameless (optional) ---
    document.addEventListener('keydown', (e)=>{
      if(e.key && e.key.toLowerCase() === 'f'){
        window.location.href = 'shameless.html';
      }
    });
  </script>
