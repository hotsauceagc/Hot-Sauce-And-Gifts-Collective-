  <script>
    // Chat functionality
    function toggleChat() {
      document.getElementById('chatSanctuary').classList.toggle('open');
    }

    function sendMessage() {
      const input = document.getElementById('chatInput');
      const text = input.value.trim();
      if (!text) return;

      addMessage(text, 'sent');
      input.value = '';
      
      // Simulate reply
      setTimeout(() => {
        const replies = [
          "OMG same ğŸ˜‚",
          "The tea is HOT today â˜•",
          "Tell me more... ğŸ‘€",
          "No judgment but... ğŸ¤­",
          "I feel seen ğŸ˜…",
          "Plot twist! ğŸ­",
          "This is why I love this place ğŸ¤—"
        ];
        const randomReply = replies[Math.floor(Math.random() * replies.length)];
        addMessage(randomReply, 'received');
      }, 1500 + Math.random() * 2000);
    }

    function sendReaction(emoji) {
      addMessage(emoji, 'sent');
    }

    function addMessage(text, type) {
      const container = document.getElementById('chatMessages');
      const message = document.createElement('div');
      message.className = `message ${type}`;
      
      const avatars = type === 'sent' ? ['ğŸ˜‰', 'ğŸ˜‚', 'ğŸ¤—', 'ğŸ˜†'] : ['ğŸ¤­', 'ğŸ˜', 'ğŸ«£', 'â˜•', 'ğŸ­', 'ğŸ‘€'];
      const avatar = avatars[Math.floor(Math.random() * avatars.length)];
      
      message.innerHTML = `
        <div class="message-avatar">${avatar}</div>
        ${text}
        <div class="message-meta">${type === 'sent' ? 'You' : 'Anonymous_' + Math.floor(Math.random() * 9999)} â€¢ now</div>
      `;
      
      container.appendChild(message);
      container.scrollTop = container.scrollHeight;
    }

    function handleChatKey(e) {
      if (e.key === 'Enter') sendMessage();
    }

    // Confession submission
    function submitConfession() {
      const input = document.getElementById('confessionInput');
      const text = input.value.trim();
      if (!text) {
        alert('Spill the tea first! â˜•');
        return;
      }

      // Create new confession card
      const stream = document.querySelector('.confession-stream');
      const newCard = document.createElement('div');
      newCard.className = 'confession-card';
      newCard.style.animation = 'messagePop 0.5s ease';
      newCard.innerHTML = `
        <div class="confession-header">
          <div class="anonymous-tag">
            <div class="anon-icon" style="background: linear-gradient(135deg, var(--golden), var(--hot-pink));">ğŸ‘¤</div>
            Freshly_Shameless
          </div>
          <span class="confession-time">just now</span>
        </div>
        <div class="confession-text">${text}</div>
        <div class="confession-actions">
          <button class="action-btn laugh" onclick="react(this)">ğŸ˜‚ 0</button>
          <button class="action-btn" onclick="react(this)">ğŸ¤— 0</button>
          <button class="action-btn" onclick="react(this)">ğŸ˜‰ 0</button>
          <button class="action-btn" onclick="react(this)">ğŸ’¬ Reply</button>
        </div>
      `;
      
      stream.insertBefore(newCard, stream.children[1]);
      input.value = '';
      
      // Add to chat
      setTimeout(() => {
        addMessage(`New confession just dropped! ğŸš¨ "${text.substring(0, 50)}${text.length > 50 ? '...' : ''}"`, 'received');
      }, 500);
    }

    // Question selection
    function selectQuestion(el) {
      const text = el.querySelector('.question-text').textContent;
      document.getElementById('confessionInput').value = `Re: ${text}\n\n`;
      document.getElementById('confessionInput').focus();
      document.querySelector('.confession-booth').scrollIntoView({ behavior: 'smooth' });
    }

    // Reaction handling
    function react(btn) {
      const match = btn.textContent.match(/(\D+)(\d+)/);
      if (match) {
        const emoji = match[1];
        const count = parseInt(match[2]) + 1;
        btn.textContent = emoji + count;
        btn.style.transform = 'scale(1.2)';
        setTimeout(() => btn.style.transform = '', 200);
      }
    }

    // Auto-scroll chat to bottom
    document.getElementById('chatMessages').scrollTop = document.getElementById('chatMessages').scrollHeight;

    // Periodic new confessions
    setInterval(() => {
      if (Math.random() > 0.7) {
        const confessions = [
          "I still sleep with a stuffed animal and I'm 32. His name is Mr. Whiskers. ğŸ§¸",
          "I fake phone calls in public to avoid people I know. Oscar-worthy performances. ğŸ­",
          "I've been using my ex's Netflix for 2 years. Thanks Chad, you were trash but your password lives on. ğŸ’€",
          "I pretend to understand wine but I honestly can't tell the difference. It's all grape juice to me. ğŸ·",
          "I have a secret Pinterest board for my imaginary wedding to a celebrity who doesn't know I exist. ğŸ’ğŸ‘€"
        ];
        const randomConfession = confessions[Math.floor(Math.random() * confessions.length)];
        
        const stream = document.querySelector('.confession-stream');
        const newCard = document.createElement('div');
        newCard.className = 'confession-card';
        newCard.innerHTML = `
          <div class="confession-header">
            <div class="anonymous-tag">
              <div class="anon-icon" style="background: linear-gradient(135deg, var(--vivid-violet), var(--electric-cyan));">ğŸ‘¤</div>
              Anonymous_${Math.floor(Math.random() * 9999)}
            </div>
            <span class="confession-time">just now</span>
          </div>
          <div class="confession-text">${randomConfession}</div>
          <div class="confession-actions">
            <button class="action-btn laugh" onclick="react(this)">ğŸ˜‚ ${Math.floor(Math.random() * 50)}</button>
            <button class="action-btn" onclick="react(this)">ğŸ¤— ${Math.floor(Math.random() * 20)}</button>
            <button class="action-btn" onclick="react(this)">ğŸ˜‰ ${Math.floor(Math.random() * 30)}</button>
            <button class="action-btn" onclick="react(this)">ğŸ’¬ Reply</button>
          </div>
        `;
        stream.insertBefore(newCard, stream.children[1]);
        
        // Notify chat
        addMessage(`ğŸš¨ Fresh confession incoming! Check the stream...`, 'received');
      }
    }, 30000); // Every 30 seconds
  </script>
